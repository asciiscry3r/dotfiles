Xft.dpi:       92
Xft.antialias: true
Xft.hinting:   true
Xft.rgba:      rgb
Xft.autohint:  true
Xft.hintstyle: hintsfull
Xft.lcdfilter: lcddefault

XTerm*background:        #171717
XTerm*foreground:        #f8f8f8
XTerm*transparent:	 true
XTerm*pointerColor:      #1ABB9B
XTerm*faceName:          Fixed
XTerm*faceSize:          10
XTerm*reverseVideo:      off
XTerm*selectToClipboard: true

*background:             #171717
*foreground:             #f8f8f8
*fading:                 8
*fadeColor:              black
*cursorColor:            #f8f8f8
*pointerColorBackground: #2B2C2B
*pointerColorForeground: #16A085

! special
*.foreground:   #f8f8f8
*.background:   #171717
*.cursorColor:  #f8f8f8

! black
*.color0:       #171717
*.color8:       #38252c

! red
*.color1:       #d81765
*.color9:       #ff0000

! green
*.color2:       #97d01a
*.color10:      #76b639

! yellow
*.color3:       #ffa800
*.color11:      #e1a126

! blue
*.color4:       #16b1fb
*.color12:      #289cd5

! magenta
*.color5:       #ff2491
*.color13:      #ff2491

! cyan
*.color6:       #0fdcb6
*.color14:      #0a9b81

! white
*.color7:       #ebebeb
*.color15:      #f8f8f8

Xcursor.theme: xcursor-breeze
Xcursor.size: 0

URxvt.iso14755:	   false
URxvt.iso14755_52: false

URxvt.font: xft:UbuntuMono Nerd Font Mono:style=Regular 12

! size=10

! URxvt.font:      -xos4-terminus-medium-r-normal--16-160-72-72-c-80-iso10646-1
! URxvt.bold.font: -xos4-terminus-bold-r-normal--16-160-72-72-c-80-iso10646-1

URxvt.letterSpace:	    -1

URxvt.depth:                32
URxvt.background:           [85]#000000
URxvt*scrollBar:            false
URxvt*mouseWheelScrollPage: true
URxvt*cursorBlink:          true

! URxvt*background:          black

URxvt*foreground:             #ebebeb
URxvt*saveLines:              5000
URxvt.keysym.Shift-Control-V: eval:paste_clipboard
URxvt.keysym.Shift-Control-C: eval:selection_to_clipboard

!Xterm escape codes, word by word movement

URxvt.keysym.Control-Left:        \033[1;5D
URxvt.keysym.Shift-Control-Left:  \033[1;6D
URxvt.keysym.Control-Right:       \033[1;5C
URxvt.keysym.Shift-Control-Right: \033[1;6C
URxvt.keysym.Control-Up:          \033[1;5A
URxvt.keysym.Shift-Control-Up:    \033[1;6A
URxvt.keysym.Control-Down:        \033[1;5B
URxvt.keysym.Shift-Control-Down:  \033[1;6B

! === rofi ===

rofi.modi:                           ssh,window,drun,run,keys
rofi.sidebar-mode:                   true
rofi.terminal:                       rofi-sensible-terminal
rofi.ssh-client:                     ssh
rofi.ssh-command:                    {terminal} -e "{ssh-client} {host}"
rofi.opacity:                        85
rofi.width:                          50
rofi.bw:                             4

! State:           'bg',     'fg',     'bgalt',  'hlbg',   'hlfg'
rofi.color-normal: #000000,  #ffffff,  #000000,  #136d00,  #eee8d5
rofi.color-urgent: #000000,  #ffffff,  #000000,  #136d00,  #fdf6e3
rofi.color-active: #000000,  #ffffff,  #000000,  #136d00,  #fdf6e3

!                  'background', 'border', 'separator'
rofi.color-window: #000000,      #0E5300,  #002b36

